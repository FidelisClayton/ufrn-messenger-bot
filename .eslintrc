{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "parser": "babel-eslint",
    "rules": {
        "indent": [ "error", 2, { "SwitchCase": 1  } ],
        "linebreak-style": [ "error", "unix" ],
        "quotes": [ "error", "single" ],
        "semi": [ "error", "never" ],
        "no-console": 1,
        "no-debugger": 1,
        "eol-last": 0,
        "no-var": 1,
    }
}
